              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/itemNumber" android:layout_margin="4dp"
            android:padding="0dp"/>
    <TextView
            android:text="TextView"
            android:layout_height="wrap_content" android:id="@+id/itemString" android:layout_margin="4dp"
            android:layout_width="wrap_content"/>
</LinearLayout>